<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="1dp">
    <RelativeLayout
        android:id="@+id/friend_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_image_friend"
            android:background="@drawable/background_avatar"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image_friend"
            android:layout_marginStart="5dp"
            android:padding="8dp"
            android:paddingEnd="10dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:id="@+id/show_message_friend"
            android:textSize="18sp"
            android:background="@drawable/background_messenger_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_message_friend"
            android:layout_alignParentStart="true"
            android:id="@+id/txt_time_friend_send"
            android:textSize="12sp"
            android:text="10:00"
            android:layout_marginTop="3dp"
            android:layout_marginStart="50dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_image"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_messenger_right"
            android:padding="8dp"
            android:paddingEnd="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_message"
            android:layout_alignParentEnd="true"
            android:id="@+id/txt_time_user_send"
            android:textSize="12sp"
            android:text="10:00"
            android:layout_marginTop="3dp"/>

    </RelativeLayout>
</RelativeLayout>