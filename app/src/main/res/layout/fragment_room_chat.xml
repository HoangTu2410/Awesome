<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E5E5"/>
    <ImageView
        android:id="@+id/btn_back_room_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:layout_marginStart="12dp"
        android:clickable="true"
        android:focusable="true" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/background_avatar"
        android:layout_toEndOf="@+id/btn_back_room_chat"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginStart="17dp"
        android:id="@+id/img_avatar_friend"/>
    <TextView
        android:id="@+id/txt_name_room_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fullname"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/img_avatar_friend"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:layout_marginStart="13dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_name_room_chat"
        android:background="@drawable/background_container"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp">
